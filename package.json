{
	"name": "@sdc224/logger-ts",
	"version": "1.0.7",
	"private": false,
	"description": "A Logger in Typescript",
	"author": {
		"name": "Sourodeep Chatterjee",
		"email": "sourodeep224@outlook.com",
		"url": "https://sdcworld.visualstudio.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/sdc224/logger-ts.git"
	},
	"license": "MIT",
	"engines": {
		"node": ">=10"
	},
	"main": "build/main/index.js",
	"typings": "build/main/index.d.ts",
	"module": "build/module/index.js",
	"files": [
		"build"
	],
	"keywords": [
		"logger",
		"typescript",
		"library",
		"node",
		"eslint",
		"prettier",
		"travis-ci"
	],
	"scripts": {
		"clean": "rimraf coverage build tmp",
		"build:main": "tsc -p tsconfig.json",
		"build:module": "tsc -p tsconfig.module.json",
		"build:watch": "tsc -w -p tsconfig.json",
		"build": "yarn-or-npm clean && yarn-or-npm build:main && yarn-or-npm build:module",
		"lint": "eslint . --ext .ts",
		"pretty": "cross-env prettier --ignore-path .eslintignore --write '**/*.{js,ts,json,yml}'",
		"test": "jest --coverage",
		"test:watch": "jest --watch"
	},
	"dependencies": {
		"tslib": "^2.0.0"
	},
	"devDependencies": {
		"@types/jest": "26.0.5",
		"@types/node": "12.12.52",
		"@typescript-eslint/eslint-plugin": "3.7.0",
		"@typescript-eslint/parser": "3.7.0",
		"cross-env": "7.0.2",
		"eslint": "7.5.0",
		"eslint-config-prettier": "6.11.0",
		"eslint-plugin-jest": "23.18.0",
		"jest": "26.1.0",
		"prettier": "2.0.5",
		"rimraf": "3.0.2",
		"ts-jest": "26.1.3",
		"tsutils": "3.17.1",
		"typescript": "3.9.7",
		"yarn-or-npm": "3.0.1"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	}
}
